<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.jcing.jcingworld</groupId>
  <artifactId>JcingWorld</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <profiles>
    <profile>
      <id>lwjgl-natives-linux</id>
      <properties>
        <lwjgl.natives>natives-linux</lwjgl.natives>
      </properties>
    </profile>
    <profile>
      <id>lwjgl-natives-macos</id>
      <properties>
        <lwjgl.natives>natives-macos</lwjgl.natives>
      </properties>
    </profile>
    <profile>
      <id>lwjgl-natives-windows</id>
      <properties>
        <lwjgl.natives>natives-windows</lwjgl.natives>
      </properties>
    </profile>
    <profile>
      <id>windows</id>
      <build>
        <resources>
          <resource>
            <directory>C:\workspace\java\JcingWorld\resources</directory>
          </resource>
        </resources>
        <plugins>
          <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.7.0</version>
            <executions>
              <execution>
                <id>default-compile</id>
                <phase>compile</phase>
                <goals>
                  <goal>compile</goal>
                </goals>
                <configuration>
                  <includes>
                    <include>src/**/*.java</include>
                    <include>core/src/main/java/**/*.java</include>
                  </includes>
                  <excludes>
                    <exclude>**/*ArtisticStylePlugin.java</exclude>
                  </excludes>
                </configuration>
              </execution>
              <execution>
                <id>default-testCompile</id>
                <phase>test-compile</phase>
                <goals>
                  <goal>testCompile</goal>
                </goals>
                <configuration>
                  <includes>
                    <include>src/**/*.java</include>
                    <include>core/src/main/java/**/*.java</include>
                  </includes>
                  <excludes>
                    <exclude>**/*ArtisticStylePlugin.java</exclude>
                  </excludes>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <includes>
                <include>src/**/*.java</include>
                <include>core/src/main/java/**/*.java</include>
              </includes>
              <excludes>
                <exclude>**/*ArtisticStylePlugin.java</exclude>
              </excludes>
            </configuration>
          </plugin>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>2.4.3</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <transformers>
                    <transformer>
                      <mainClass>com.deeparteffects.desktopapp.Main</mainClass>
                      <manifestEntries>
                        <Main-Class>com.deeparteffects.desktopapp.Main</Main-Class>
                        <Specification-Title>JcingWorld</Specification-Title>
                        <Specification-Version>0.0.1-SNAPSHOT</Specification-Version>
                        <Implementation-Title>JcingWorld</Implementation-Title>
                        <Implementation-Version>0.0.1-SNAPSHOT</Implementation-Version>
                        <Implementation-Vendor-Id>de.jcing.jcingworld</Implementation-Vendor-Id>
                      </manifestEntries>
                    </transformer>
                  </transformers>
                  <filters>
                    <filter>
                      <artifact>*:*</artifact>
                      <excludes>
                        <exclude>META-INF/*.SF</exclude>
                        <exclude>META-INF/*.DSA</exclude>
                        <exclude>META-INF/*.RSA</exclude>
                      </excludes>
                    </filter>
                  </filters>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <properties>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.compiler.source>1.8</maven.compiler.source>
    <lwjgl.version>3.2.0</lwjgl.version>
  </properties>
</project>

